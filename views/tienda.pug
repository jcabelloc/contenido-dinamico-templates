extends layouts/main-layout.pug

block styles
    link(rel="stylesheet", href="/css/producto.css")

block content
    main
        if prods.length > 0
            .grid
                each producto in prods
                    article.card.product-item
                        header.card__header
                            h1.product__title #{producto.nombre}
                        div.card__image
                            img(src="https://cdn.pixabay.com/photo/2017/03/20/22/13/book-2160539_640.png", alt="Un Libro")
                            div.card__content
                                h2.product__price S/ 19.99
                                p.product__description Un libro sobre la historia de America
                            .card__actions
                                button.btn Agregar al Carrito
        else
            h1 No hay Productos
